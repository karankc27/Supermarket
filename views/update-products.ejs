<%-include("header")%>
<br><br>


            <div class="privacy">
		<div class="container">
			<!-- tittle heading -->
      <div class="spec ">
				<h3>My Products</h3>
				<div class="ser-t">
					<b></b>
					<span><i></i></span>
					<b class="line"></b>
				</div>
			</div>
			<!-- //tittle heading -->
			<div class="checkout-right">
				<h4>Your cart contains:
					<span><%=products.length%> Products</span>
				</h4>
				<div class="table-responsive">
					<table class="timetable_sub">
						<thead>
							<tr>
								<th>SL No.</th>
								<th>Product</th>
								<th>Quantity</th>
								<th>Product Name</th>

								<th>Price (in Rs)</th>
                <th>Category</th>
                <th>Pincode</th>
                <th>Sub-Category</th>

                <th>Update</th>

              </tr>
						</thead>
						<tbody>
              <% var i=0; %>
              <% products.forEach(p => { i++; %>
                <form  action="/update-product" method="post">
                  <input type="hidden" name="id" value="<%=p._id%>">
                  <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                  	<tr class="rem1">
								<td class="invert"><%=i%></td>
								<td class="invert-image">
										<img src="<%= p.imageurl %>"  style="width:150px;height:100px;" alt=" " class="img-responsive">
                    <input type="text" name="image" value="<%= p.imageurl%>">
								</td>
								<td class="invert">
												<span> <input type="text" name="quantity" value="<%= p.quantity%>"> </span>

								</td>
								<td class="invert"><input type="text" name="pname" value="<%= p.pname %>"></td>
								<td class="invert"> <input type="number" name="price" value="<%= p.price%>"></td>
                <td class="invert"> <input type="text" name="category" value="<%= p.category%>"></td>
                <td class="invert"> <input type="number" name="pin" value="<%= p.pin%>"></td>
                <td class="invert"> <input type="text" name="subcat" value="<%= p.subcat%>"></td>

                <td class="invert">
									<input type="submit" name="Save" value="Save">
								</td>
							</tr>

                              </form>
              <% }) %>




						</tbody>
					</table>
				</div>
			</div> <br><br>
			<div class="checkout-left">
				<div class="address_form_agile">

					<div class="checkout-right-basket">

					</div>
				</div>


<%-include("footer")%>
