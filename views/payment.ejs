<%- include('header') %>
<br><br>
            <div class="privacy">
		<div class="container">
			<!-- tittle heading -->
      <div class="spec ">
				<h3>Checkout</h3>
				<div class="ser-t">
					<b></b>
					<span><i></i></span>
					<b class="line"></b>
				</div>
			</div>
			<!-- //tittle heading -->
			<div class="checkout-right">
				<h4>Your shopping cart contains:
					<span><%=products.length%> Products</span>
				</h4>
				<div class="table-responsive">
					<table class="timetable_sub">
						<thead>
							<tr>
								<th>SL No.</th>
								<th>Product</th>
								<th>Quality</th>
								<th>Product Name</th>

								<th>Price</th>
								<th>Total</th>
							</tr>
						</thead>
						<tbody>
            <% if (products.length > 0) {i=0; %>
              <% products.forEach(p => { i++; %>

                  	<tr class="rem1">
								<td class="invert"><%=i%></td>
								<td class="invert-image">
										<img src="<%= p.productId.imageurl %>"  style="width:150px;height:100px;" alt=" " class="img-responsive">
								</td>
								<td class="invert">
									<div class="quantity">
										<div class="quantity-select">
											<div class="entry value-minus">&nbsp;</div>
											<div class="entry value">
												<span><%= p.quantity %></span>
											</div>
											<div class="entry value-plus active">&nbsp;</div>
										</div>
									</div>
								</td>
								<td class="invert"><%= p.productId.pname %></td>
								<td class="invert">Rs <%= p.productId.price %></td>
								<td class="invert">
									<div class="rem">
										<div class="close1">Rs<%= p.quantity* p.productId.price %></div>
									</div>
								</td>
							</tr>
              <% }) %>


                                	<tr class="rem1">
              								<td class="invert"></td>
              								<td class="invert-image">
              								</td>
              								<td class="invert">
              									<div class="quantity">
              									</div>
              								</td>
              								<td class="invert"></td>
              								<td class="invert"><b>Total:</b></td>
              								<td class="invert">
              									<div class="rem">
              										<div class="close1"> <b>Rs<%= total %></b></div>
              									</div>
              								</td>
              							</tr>


						</tbody>
					</table>
				</div>
			</div> <br><br>
			<div class="checkout-left">
				<div class="address_form_agile">

					<div class="checkout-right-basket">

					</div>
				</div>


                <div class="spec ">
          				<h3>Payment</h3>
          				<div class="ser-t">
          					<b></b>
          					<span><i></i></span>
          					<b class="line"></b>
          				</div>
          			</div>

                <div id="mytotal" data-amount=<%= total %>></div>

<form action="/payment" method="POST">
<script
  src="https://checkout.razorpay.com/v1/checkout.js"
  data-key="rzp_live_CryGYAtfe7k2C2"
  data-amount= "<%= total*100 %>"
  data-currency="INR"
  data-order_id= "<%=orderid%>"
  data-buttontext="Pay Online"
  data-name="Sun Mart"
  data-description="Test transaction"
  data-image="images/logo.png"
  data-prefill.name="<%= name%>"
  data-prefill.email="<%= email%>"
  data-prefill.contact="<%= phone%>"
  data-theme.color="green"
></script>
<input type="hidden" custom="Hidden Element" name="hidden">
<input type="hidden" name="mode" value="Online">
</form>

                <form action='/payment' method='post'>

                  <input type="hidden" name="mode" value="Cash On Delivery">



        					<hr class="mb-4">
                  <input type="hidden" name="_csrf" value="<%= csrfToken%>">

        					<button class="btn btn-primary bt-lg btn-block" style="height:60px;width:120px" type="submit">COD</button>
        			</form>
        		</div>
            <% } %>
				<div class="clearfix"> </div>
			</div>
		</div>
    </div>
	<br><br>
<%- include("footer") %>
